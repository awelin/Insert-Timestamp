{
  "name": "insert-timestamp",
  "displayName": "Insert Timestamp",
  "description": "Quickly insert the current date and time at the cursor in any editor, including Jupyter Notebook (.ipynb) cells.",
  "version": "0.0.3",
  "publisher": "ZelinYang21",
  "engines": {
    "vscode": "^1.104.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZelinYang21/insert-timestamp"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:insert-timestamp.insertNow"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "insert-timestamp.insertNow",
        "title": "Insert Timestamp"
      }
    ],
    "keybindings": [
      {
        "command": "insert-timestamp.insertNow",
        "key": "ctrl+shift+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Insert Timestamp Settings",
      "properties": {
        "insertTimestamp.timezone": {
          "type": "string",
          "default": "local",
          "description": "Set the timezone for inserted timestamps. Examples: UTC, UTC+8, UTC-5, or local."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
